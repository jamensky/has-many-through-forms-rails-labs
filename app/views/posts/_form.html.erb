<%= form_for @post do |f| %>

  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br>

  <p>Select category:</p>
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <br> 

  <h4>Create a new category:</h4>
    <%= f.fields_for :categories, post.categories.build do |c| %>
    <%= c.label 'Name' %>
    <%= c.text_field :name %>
    <% end %>
  <br>
  <br>


  <%= f.submit %>

<% end %> 